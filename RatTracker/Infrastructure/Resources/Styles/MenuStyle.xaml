<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


  <Style TargetType="Menu" x:Key="MenuStyle">
    <Setter Property="Background" Value="{StaticResource BrushTransparent}" />
    <Setter Property="Foreground" Value="{StaticResource BrushEliteOrange}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushEliteOrange}" />
  </Style>

  <Style TargetType="Menu" BasedOn="{StaticResource MenuStyle}" />

  <Style TargetType="MenuItem" x:Key="MenuItemStyle">
    <Setter Property="Background" Value="{StaticResource BrushBlack}" />
    <Setter Property="Foreground" Value="{StaticResource BrushEliteOrange}" />
    <Setter Property="BorderBrush" Value="{StaticResource BrushEliteOrange}" />
  </Style>

  <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}" />

</ResourceDictionary>