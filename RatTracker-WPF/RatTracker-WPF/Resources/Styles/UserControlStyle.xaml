<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style TargetType="UserControl" x:Key="UserControlStyle">
    <Setter Property="FontFamily" Value="Segoe UI" />
    <Setter Property="Background" Value="{StaticResource BrushTransparent}" />
    <Setter Property="Foreground" Value="{StaticResource BrushEliteOrange}" />
  </Style>

  <Style TargetType="UserControl" BasedOn="{StaticResource UserControlStyle}" />

</ResourceDictionary>